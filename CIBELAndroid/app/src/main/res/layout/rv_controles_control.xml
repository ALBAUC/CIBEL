<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="8dp"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/controlIcon_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        style="@style/RecyclerIconStyle"
        android:layout_centerVertical="true"
        tools:srcCompat="@tools:sample/avatars"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/controlIcon_iv"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="14dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/controlName_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:inputType="textMultiLine"
            tools:text="Control"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp">

        <ImageView
            android:id="@+id/controlAddedIcon_iv"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:src="@drawable/check_circle"
            style="@style/RecyclerIconStyle" />

        <TextView
            android:id="@+id/controlAddedInfo_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/dElementAdded"
            android:textSize="12dp"
            tools:text="AÃ±adido"/>
    </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/arrow_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/arrow_forward"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        style="@style/RecyclerIconStyle"/>

</RelativeLayout>
